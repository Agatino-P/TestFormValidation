<UserControl x:Class="TestFormValidation.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TestFormValidation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Rectangle Width="10" Height="10" Fill="Crimson" />
        <TextBlock Width="200" Text="{Binding VMString}" />
        <TextBox Width="100" Text="{Binding VMDouble}" />
    </StackPanel>
</UserControl>
